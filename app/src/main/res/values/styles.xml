<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DefaultToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="ToolbarButtonStyle">
        <item name="android:layout_height">@dimen/default_button_size</item>
        <item name="android:layout_width">@dimen/default_button_size</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ToolbarButtonBackStyle" parent="ToolbarButtonStyle">
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_marginStart">@dimen/default_button_margin</item>
    </style>
</resources>